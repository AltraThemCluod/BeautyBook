@using BeautyBook.Common;
@{
    ViewBag.Title = "Offers";
}

<main class="app-content">
    <div class="app-content-wrapper">
        <div class="app-content-title">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                            <h6 class="mb-0 pb-3 pb-sm-0 order-2 order-sm-1 mr-auto">@(beautybook.Resources.Languages.Offers)</h6>
                            <nav aria-label="breadcrumb" class="order-1 order-sm-2 ml-sm-3">
                                <ol class="breadcrumb mb-0 pl-0">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">@(beautybook.Resources.Languages.Dashboard)</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@(beautybook.Resources.Languages.Offers)</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="app-content-inner">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        @if (@ProjectSession.EmployeePermission.Item.Where(x => x.ModuleKey == "AddNewOffer").FirstOrDefault().Value == true)
                        {
                            <div class="row justify-content-between mb-3">
                                <div class="col-12 mb-3">
                                    <a href="@Url.Action("OfferDetails","Offers")" class="btn btn-primary">@(beautybook.Resources.Languages.Add_New_Offer)</a>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive table-hover fs-14">
                                    <div class="offerListdiv">
                                        <table id="offerList" class="table table-card" style="width:100%; display:inherit;">
                                        </table>
                                        <div id="loader" style="display: none;" class="text-center mb-2 mt-2">
                                            <img src='~/Content/assets/images/ajax-loader.gif' width='32px' height='32px'>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Core Scripts -->
<script src="~/Content/assets/js/jquery/jquery-3.6.0.min.js"></script>
<script src="~/Content/assets/js/popper/popper.min.js"></script>

@*API JS FILE*@
<script src="~/Content/BeautyBookAPI/APIEndPoint.js"></script>
<script src="~/Content/BeautyBookAPI/OffersAPI/ManageOffer/ManageOffers.js"></script>
<script src="~/Content/BeautyBookAPI/OffersAPI/ManageOffer/OfferDelete.js"></script>

<script>
    $(document).ready(function () {
        ArbicLanguage();
        //OfferList api funcation call
        OfferList.init();
        //getOfferdata();

    });
</script>