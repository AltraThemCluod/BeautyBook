@{
    ViewBag.Title = "Add email Marketing";
}
<main class="app-content">
    <div class="app-content-wrapper">
        <div class="app-content-title">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                            <a href="@Url.Action("ManageEmailMarketing","Marketing")"><i class="bb-arrow-left mr-3"></i></a>
                            <h6 class="mb-0 pb-3 pb-sm-0 order-2 order-sm-1 mr-auto">Add Email Marketing</h6>
                            <nav aria-label="breadcrumb" class="order-1 order-sm-2 ml-sm-3">
                                <ol class="breadcrumb mb-0 pl-0">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("ManageEmailMarketing","Marketing")">@(beautybook.Resources.Languages.Email_Marketing)</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Add Email Marketing</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="app-content-inner">
            <div class="container-fluid">
                <form action="" name="marketingform" id="marketingform">
                    <div class="row justify-content-center">
                        <div id="emailmarketingformloader" style="display: none;" class="text-center mb-4">
                            <img src='~/Content/assets/images/ajax-loader.gif' width='32px' height='32px'>
                        </div>
                        <div id="Id" value="" style="display:none" name="Id"></div>
                        <div id="SalonId" value="" style="display:none" name="SalonId"></div>
                        <div class="col-xxl-8 col-xl-9 mb-3">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">@(beautybook.Resources.Languages.E_mail_Subject)</h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label for="emailSubject" class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.Email_Subject)</label>

                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" name="emailSubject" id="emailSubject" placeholder="Enter email subject">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-8 col-xl-9 mb-3">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">@(beautybook.Resources.Languages.E_mail_Recipients)</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <fieldset class="form-group row">
                                                <legend class="col-form-label col-sm-4 float-sm-left text-sm-right pt-0">@(beautybook.Resources.Languages.Gender)</legend>
                                                <div class="col-sm-7">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="genderdetails" id="genderdetails" value="29">
                                                        <label class="form-check-label" for="allCustomers">All Customers</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="genderdetails" id="genderdetails" value="30">
                                                        <label class="form-check-label" for="filteredList">@(beautybook.Resources.Languages.Filtered_list)</label>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body border-top">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label for="customerSince" class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.Customer_Since)</label>

                                                <div class="col-sm-7">
                                                    <div class="input-group">
                                                        <input type="text" class="datepicker w-100  previousdatepicker form-control" name="customerSince" tabindex="1" id="customerSince">
                                                        <div class="input-group-append input-box-label">
                                                            <span class="input-group-text text-muted">
                                                                <i class="bb-calendar fs-21"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label for="lastVisit" class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.Last_Visit)</label>

                                                <div class="col-sm-7">
                                                    <div class="input-group">
                                                        <input type="text" class="datepicker w-100  previousdatepicker form-control" name="lastVisit" tabindex="1" id="lastVisit">
                                                        <div class="input-group-append input-box-label">
                                                            <span class="input-group-text text-muted">
                                                                <i class="bb-calendar fs-21"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.No_of_Appoinment_Between)</label>

                                                <div class="col-sm-7">
                                                    <div class="input-group align-items-center">
                                                        <input type="text" name="minappointment" id="minappointment" class="form-control" placeholder="Min appoinment">
                                                        <span class="mx-2">And</span>
                                                        <div class="error"></div>
                                                        <input type="text" class="form-control" id="maxappointment" name="maxappointment" placeholder="Max appoinment">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.Age_between)</label>

                                                <div class="col-sm-7">
                                                    <div class="input-group align-items-center">
                                                        <input type="text" name="minageyear" class="form-control" id="minageyear" placeholder="Min year">
                                                        <span class="mx-2">And</span>
                                                        <input type="text" class="form-control" name="maxageyear" id="maxageyear" placeholder="Max year">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label for="selectServices" class="col-sm-4 col-form-label text-sm-right">@(beautybook.Resources.Languages.Services)</label>

                                                <div class="col-sm-7">
                                                    <select class="selectpicker form-control" id="lookupserviceslist" title="Select services" data-selected-text-format="count" multiple="" data-live-search="true" data-size="5">
                                                    </select>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-8 col-xl-9 mv-3 mb-5">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">@(beautybook.Resources.Languages.E_mail_Template__)</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <textarea id="EditEmailTemplate"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="fixed-footer text-center">
                            <button type="button" class="btn btn-primary font-weight-medium btn-wide" onclick="ChooseEmailTemplate();">@(beautybook.Resources.Languages.Send_E_Mail)</button>
                            <button type="submit" id="addMarketingDetailsbtn" class="btn btn-primary font-weight-medium btn-wide">@(beautybook.Resources.Languages.Save_As_Draft)</button>
                            <button type="button" class="btn btn-primary font-weight-medium btn-wide" id="addMarketingDetailsbtnloading" style="display:none;" disabled>
                                <span id="saveSalonsdetailsbtntext">Saving Email Marketing Details</span> <i class="fa fa-circle-o-notch ml-1 fa-spin" aria-hidden="true"></i>
                            </button>
                            <a href="@Url.Action("ManageEmailMarketing","Marketing")" tabindex="12" class="btn btn-link btn-wide text-muted">@(beautybook.Resources.Languages.Cancel)</a>
                        </div>
                        @*<div class="fixed-footer text-center">
                                <button type="button" class="btn btn-primary font-weight-medium btn-wide">Send E-Mail</button>
                                <button type="button" class="btn btn-link btn-wide" onclick="addEmailMarketingDetails();">Save as draft</button>
                                <button type="button" class="btn btn-link">Cancel</button>
                            </div>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<!-- Modals -->
<div class="modal fade p-0" id="chooseEmailTemplate" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="chooseEmailTemplateLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-zoom modal-fullscreen-md-down">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="chooseEmailTemplateLabel">Choose E-mail Template</h5>
                <button type="button" class="modal-close close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body selecet-services-group">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row" id="emailTemplatelisting">

                        </div>
                    </div>
                </div>
                <div id="ChooseEmailloader" style="display: none;" class="text-center mb-4">
                    <img src='~/Content/assets/images/ajax-loader.gif' width='32px' height='32px'>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-link text-muted" onclick="window.location.reload();">@(beautybook.Resources.Languages.Cancel)</button>
                <button type="button" class="btn btn-primary" onclick="NextStepEmailTemplate();" id="chooseEmailTemplateNextStep">@(beautybook.Resources.Languages.Next) <i class="bb-arrow-right fs-16 ml-3"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- Core Scripts -->
<script src="~/Content/assets/js/jquery/jquery-3.6.0.min.js"></script>
<script src="~/Content/assets/js/popper/popper.min.js"></script>

<!-- Core Scripts -->
<script src="~/Content/BeautyBookAPI/APIEndPoint.js"></script>
<script src="~/Content/BeautyBookAPI/MarketingAPI/ManageEmailMarketing/ManageEmailMarketing.js"></script>
<script src="~/Content/BeautyBookAPI/MarketingAPI/EmailMarketingDetails/EmailMarketingDetails.js"></script>
<script src="~/Content/BeautyBookAPI/MarketingAPI/ManageEmailMarketing/EditEmailMarketingDetails.js"></script>
<script src="~/Content/BeautyBookAPI/MarketingAPI/EmailMarketingTemplates/EmailMarketingTemplates.js"></script>

<script>
    $(document).ready(function () {
        ArbicLanguage();
        getEmailMarketingdata();
        lookUpServices();
        ChooseEmailMarketingTemplatesButton();
        ChooseEmailMarketingTemplates();
    });
    $(function () {
        $("form[name='marketingform']").validate({
            rules: {
                emailSubject: {
                    required: true
                },
                customerSince: {
                    required: true
                },
                lastVisit: {
                    required: true
                },
                appointment: {
                    required: true
                },
                minappointment: {
                    required: true,
                    number: true
                },
                //maxappointment: {
                //    required: true,
                //    number: true
                //},
                //minageyear: {
                //    required: true,
                //    number: true
                //},
                //maxageyear: {
                //    required: true,
                //    number: true

                //},
            },
            messages: {
                emailSubject: "Email Subject is required",
                customerSince: "Customer Since is required",
                lastVisit: "Last Visit is required",
                appointment: "Appointment  is required",
                minappointment: "Min Appointment  is required",
                maxappointment: "MAx Appointment  is required",
                minageyear: "Min Age Year  is required",
                maxageyear: "Max Age Year is required",
            },
            submitHandler: function () {
                addEmailMarketingDetails();
            }
        });
    });
</script>
