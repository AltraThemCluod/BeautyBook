@{
    ViewBag.Title = "Store Inside";
}

<main class="app-content">
    <div class="app-content-wrapper">
        <div class="app-content-title">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                            <h6 class="mb-0 pb-3 pb-sm-0 order-2 order-sm-1 mr-auto">@(beautybook.Resources.Languages.Store)</h6>
                            <nav aria-label="breadcrumb" class="order-1 order-sm-2 ml-sm-3">
                                <ol class="breadcrumb mb-0 pl-0">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">@(beautybook.Resources.Languages.Dashboard)</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@(beautybook.Resources.Languages.Store)</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="app-content-inner">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-xxl-2 col-lg-3">
                        <div class="store-filters clearfix">
                            <div class="store-filter-backdrop"></div>
                            <div class="store-filter">
                                <div class="filter-heading d-flex align-items-center" style="justify-content: space-between;">
                                    <h5 class="d-inline-block mb-0">@(beautybook.Resources.Languages.Filters)</h5>
                                    <div>
                                        <button class="btn btn-primary btn-sm fs-13" onclick="ViewProductList();" style="padding: 6px 7px; ">@(beautybook.Resources.Languages.Apply)</button>
                                        <button class="btn btn-link btn-sm fs-13 text-muted" onclick="window.location.reload();">@(beautybook.Resources.Languages.Reset)</button>
                                    </div>
                                </div>
                                <!-- Category -->
                                <div class="filter-item">
                                    <a class="text-reset filter-title" data-toggle="collapse" href="#categoriesFilter" role="button"
                                       aria-expanded="true" aria-controls="categoriesFilter">
                                        <span>@(beautybook.Resources.Languages.Category)</span>
                                        <i class="filter-arrow bb-chevron-up"></i>
                                    </a>

                                    <div class="collapse multi-collapse show" id="categoriesFilter">
                                        <ul class="product-category-list" id="categoriesFilterlist">
                                        </ul>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="filter-item border-top">
                                    <a class="text-reset filter-title" data-toggle="collapse" href="#priceFilters" role="button"
                                       aria-expanded="true" aria-controls="priceFilters">
                                        <span>@(beautybook.Resources.Languages.Price)</span>
                                        <i class="filter-arrow bb-chevron-up"></i>
                                    </a>

                                    <div class="collapse multi-collapse show" id="priceFilters">
                                        <div class="product-category-list">

                                            <div class="d-flex pb-1">
                                                <div class="w-50">
                                                    <div class="input-group input-group-sm">
                                                        <div class="input-group-prepend"><span class="input-group-text">SAR</span></div>
                                                        <input class="form-control" id="MinPrice" name="MinPrice" type="text" value="" placeholder="@(beautybook.Resources.Languages.Min)">
                                                    </div>
                                                </div>
                                                <div class="w-50 pl-1">
                                                    <div class="input-group input-group-sm">
                                                        <div class="input-group-prepend"><span class="input-group-text">SAR</span></div>
                                                        <input class="form-control" id="MaxPrice" name="MaxPrice" type="text" value="" placeholder="Max">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Brand -->
                                <div class="filter-item border-top">
                                    <a class="text-reset filter-title" data-toggle="collapse" href="#brandFilters" role="button"
                                       aria-expanded="true" aria-controls="boardFilters">
                                        <span>@(beautybook.Resources.Languages.Brand)</span>
                                        <i class="filter-arrow bb-chevron-up"></i>
                                    </a>

                                    <div class="collapse multi-collapse show" id="brandFilters">
                                        <div class="product-category-list" id="brandFilterslist">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xxl-10 col-lg-9">
                        <div class="card shadow-1 rounded-0">

                            <div class="card-header pb-2">
                                <div class="d-flex align-items-center">
                                    <span class="fs-12 font-weight-semibold mr-3">@(beautybook.Resources.Languages.Sort_by_)</span>

                                    <ul class="nav nav-pills" id="sortByFillter">
                                        <li class="nav-item">
                                            <a class="nav-link fs-14" onclick="ViewProductList(1);" href="#">@(beautybook.Resources.Languages.Popularity)</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link fs-14" onclick="ViewProductList(2);" href="#">@(beautybook.Resources.Languages.Price____Low_to_High)</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link fs-14" onclick="ViewProductList(3);" href="#">@(beautybook.Resources.Languages.Price____High_to_Low)</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link fs-14 active" onclick="ViewProductList(4);" href="#">@(beautybook.Resources.Languages.Newest_First)</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xxl-5" id="viewProductlist">

                                </div>
                                <div id="viewProductlistloader" style="display: none;" class="text-center mb-2 mt-2">
                                    <img src='~/Content/assets/images/ajax-loader.gif' width='32px' height='32px'>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

<!-- Core Scripts -->
<script src="~/Content/assets/js/jquery/jquery-3.6.0.min.js"></script>
<script src="~/Content/assets/js/popper/popper.min.js"></script>

@*API JS FILE*@
<script src="~/Content/BeautyBookAPI/APIEndPoint.js"></script>
<script src="~/Content/BeautyBookAPI/StoreAPI/StoreInside/StoreInside.js"></script>
<script src="~/Content/BeautyBookAPI/StoreAPI/WishlistAPI/Wishlist/Index.js"></script>
<script src="~/Content/BeautyBookAPI/StoreAPI/Cart/AddToCart.js"></script>
<script src="~/Content/BeautyBookAPI/StoreAPI/WishlistAPI/Wishlist/Index.js"></script>


<script>
    $(document).ready(function () {
        ArbicLanguage();
        //productCategory API function call
        productCategory();

        //productBrand API function call
        productBrand();

        //ViewProductList API function call
        ViewProductList();
    })
    
    $(document).ready(function () {
        $('#sortByFillter li a').click(function () {
            $('#sortByFillter li .active').removeClass("active");
            $(this).addClass("active");
        });
    });
</script>