                                     ${response.Item.CustomerEmail == "" || response.Item.CustomerEmail == null ? '-' : `<a class="c-text-primary" href="mailto:${response.Item.CustomerEmail}">${response.Item.CustomerEmail}</a>`}
                                    </label>
                                </div>
                                <div class="col-lg-3 mt-2">
                                    <div id="primaryphone">Primary Phone</div>
                                    <label>
                                   ${response.Item.CustomerPrimaryPhone == "" || response.Item.CustomerPrimaryPhone == null ? '-' : `<a class="c-text-primary" href="tel:${response.Item.CustomerPrimaryPhone}">${response.Item.CustomerPrimaryPhone}</a>`}
                                    </label>
                                </div>
                                <div class="col-lg-3 mt-2">
                                    <div id="alternatephone">
                                        Alternate Phone
                                    </div>
                                    <label>
                                   ${response.Item.CustomerAlternatePhone == "" || response.Item.CustomerAlternatePhone == null ? '-' : `<a class="c-text-primary" href="tel:${response.Item.CustomerAlternatePhone}">${response.Item.CustomerAlternatePhone}</a>`}
                                    </label>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-lg-3 mt-2">
                                    <div>
                                        Appointment Date
                                    </div>
                                    <label id="appoinementdate">
