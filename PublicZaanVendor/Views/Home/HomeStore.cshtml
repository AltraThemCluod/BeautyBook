<!-- Schedule A Call section -->
<div class="schedule-section" id="schedule_call">
    <div class="container">
        <div class="row m-0">
            <div class="col-lg-12">
                <div class="schedule-text text-center mb-4">
                    <h4>@Resources.Language.scheduleacall</h4>
                    <p>
                        @Resources.Language.scheduleacallContent
                    </p>
                </div>
                <div class="schedule-form-section">
                    <form class="schedule-form row m-0" id="scheduleCall">
                        <div class="form-group col-lg-4">
                            <label class="schedule-input-label"> @Resources.Language.YourName</label>
                            <input type="text" id="fullName" name="fullName" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="schedule-input-label">@Resources.Language.PhoneNumber</label>
                            <input type="number" id="phoneNumber" name="phoneNumber" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="schedule-input-label">@Resources.Language.ReachOutTime</label>
                            <select class="form-control" id="duringDay" name="duringDay">

                                <option value="" disabled selected hidden>@Resources.Language.ReachOutTimeLabel</option>
                                <option value="@Resources.Language.Duringtheday">@Resources.Language.Duringtheday</option>
                                <option value="@Resources.Language.DuringtheNight">@Resources.Language.DuringtheNight</option>
                                <option value="@Resources.Language.Anytime">@Resources.Language.Anytime</option>
                            </select>
                        </div>
                        <div class="col-lg-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary them-button button">
                                @Resources.Language.RequestACall
                            </button>
                            <button type="submit" class="btn btn-primary them-button button-loader" disabled style="display:none;">
                                <div class="spinner-border text-light mr-1" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                                @Resources.Language.RequestACall
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

