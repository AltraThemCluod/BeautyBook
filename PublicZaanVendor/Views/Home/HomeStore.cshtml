@section Scripts{
    <script>
        $(document).ready(function ($) {
            $("#scheduleCall").validate({
                rules: {
                    fullName: "required",
                    phoneNumber: {
                        required: true,
                        minlength: 9,
                        maxlength: 9,
                    },
                    duringDay: "required",
                },
                messages: {
                    fullName: "@Resources.Language.YourNameValidation",
                    phoneNumber: {
                        required: "@Resources.Language.PhoneNumberValidation"
                    },
                    duringDay: "@Resources.Language.ReachOutTimeValidation",

                },
                errorPlacement: function (error, element) {
                    if (element.is(":radio")) {
                        error.appendTo(element.parents('.form-group'));
                    }
                    else { // This is the default behavior
                        error.insertAfter(element);
                    }
                },
                submitHandler: function (form) {
                    SendScheduleDetails();
                }

            });
        });

        function SendScheduleDetails() {

            $(".button-loader").show();
            $(".button").hide();

            $.ajax({
                type: 'POST',
                url: "@Url.Action(Actions.SendScheduleDetails, Controllers.Home)",
                dataType: 'json',
                data: ({
                    FullName: $("#fullName").val(),
                    PhoneNumber: $("#phoneNumber").val(),
                    DuringDay: $("#duringDay").val(),
                }),
                success: function (result) {

                    if (result == true) {
                        $("#fullName").val("");
                        $("#phoneNumber").val("");
                        $("#duringDay").val("");
                    } else {
                        window.location.reload();
                    }

                    $(".button-loader").hide();
                    $(".button").show();

                }, error: function (error) {
                    window.location.reload();

                    $(".button-loader").hide();
                    $(".button").show();
                }
            });
