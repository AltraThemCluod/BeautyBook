                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-10">
                            <div class="card card-lg mb-5">
                                <div class="row">
                                    <div class="col-lg-5 auth-images">
                                        <div class="w-100 h-100">
                                            <div class="account-backside p-2">
                                                <img src="~/Content/assets/images/accountback.png" class="w-100" />
                                                <div class="logo-content text-center">
                                                    <img src="~/Content/assets/images/logo.png" class="w-40 mt-5" />
                                                    <p class="mb-0 mt-4">
                                                        Achieve double sales now - enter the world of
                                                        e-commerce and achieve your success in supply.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-7">
                                        <div class="card-body">

                                            <div class="text-center">
                                                <div class="mb-5 text-left">
                                                    <h3>@(BeautyBook_Vendor.Resources.Languages.Create_your_account)</h3>
                                                    <p>@(BeautyBook_Vendor.Resources.Languages.Alreadyhaveanaccount) <a href="@Url.Action("SignIn","Authentication")">@(BeautyBook_Vendor.Resources.Languages.Sign_in_here)</a></p>
                                                </div>
                                            </div>


                                            <form id="signUpform" name="signUpform">
                                                <div class="form-row">
                                                    <div class="col-sm-6">
                                                        <div class="form-group">
                                                            <label class="input-label" for="fullNameSrEmail">@(BeautyBook_Vendor.Resources.Languages.First_Name)</label>
                                                            <input type="text" class="form-control form-control-lg" tabindex="1" name="userFirstname" id="userFirstname" placeholder="@(BeautyBook_Vendor.Resources.Languages.First_Name)" aria-label="Firstname">
                                                        </div>
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <div class="form-group">
                                                            <label class="input-label" for="fullNameSrEmail">@(BeautyBook_Vendor.Resources.Languages.Last_Name)</label>
                                                            <input type="text" class="form-control form-control-lg" tabindex="2" name="userLastname" id="userLastname" placeholder="@(BeautyBook_Vendor.Resources.Languages.Last_Name)" aria-label="Lastname">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="input-label" for="signinSrEmail">@(BeautyBook_Vendor.Resources.Languages.Email)</label>
                                                    <input type="text" class="form-control form-control-lg" tabindex="3" name="userEmail" id="userEmail" placeholder="Email@address.com" aria-label="email@address.com">
                                                </div>

                                                <div class="form-row">
                                                    <div class="form-group col-lg-6">
                                                        <label class="input-label" for="signupPassword">@(BeautyBook_Vendor.Resources.Languages.Password)</label>
                                                        <input type="password" class="form-control form-control-lg" tabindex="4" name="userPassword" id="userPassword" placeholder="@(BeautyBook_Vendor.Resources.Languages._8__characters_required)" aria-label="8+ characters required" autocomplete="off">
                                                    </div>

                                                    <div class="form-group col-lg-6">
                                                        <label class="input-label" for="signupSrConfirmPassword">@(BeautyBook_Vendor.Resources.Languages.Confirm_Password)</label>
                                                        <input type="password" class="js-toggle-password form-control form-control-lg" tabindex="5" name="userConfirmpassword" id="userConfirmpassword" placeholder="@(BeautyBook_Vendor.Resources.Languages._8__characters_required)" aria-label="8+ characters required" autocomplete="off">
                                                    </div>
                                                </div>

                                                <div class="form-group mb-2">
                                                    <div class="custom-control custom-checkbox d-inline-block">
                                                        <input type="checkbox" class="custom-control-input terms-conditions" tabindex="6" id="termsCheckbox" name="termsCheckbox">
